<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
  <body>

      <p id="notice"><%= notice %></p>

      <h1>Contatos</h1>

<div id="main-container" class="container-fluid">
    <div class="row">
     <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <div class="row">
           <tr>
        
         <div class="col-xs-6 col-md-4"><th>Nome</th></div>
         <div class="col-xs-6 col-md-4"><th>Endereco</th></div>
         <div class="col-xs-6 col-md-4"><th>E-mail</th></div>
         <div class="col-xs-8 col-md-4"><th>Data Nascimento</th></div>
         <div class="col-xs-6 col-md-4"><th colspan="3"></th></div>
          </div>

           </tr>
          </div>
        </thead>

        <tbody>
          <% @contatos.each do |contato| %>
           <div class="row">
            <tr>
             <div class="col-xs-6 col-md-4"> <td><%= contato.nome %></td></div>
             <div class="col-xs-6 col-md-4"> <td><%= contato.endereco %></td></div>
             <div class="col-xs-6 col-md-4"> <td><%= contato.email %></td></div>
             <div class="col-xs-6 col-md-4"> <td><%= contato.dataNascimento %></td></div>
             <div class="col-xs-6 col-md-4"> <td><%= link_to 'Visualizar', contato, class: "btn btn-link" %></td></div>
             <div class="col-xs-6 col-md-4"> <td><%= link_to 'Editar', edit_contato_path(contato), class: "btn btn-link" %></td></div>
             <div class="col-xs-6 col-md-4"> <td><%= link_to 'Deletar', contato, class: "btn btn-link", method: :delete, data: { confirm: 'Tem certezar que vocÃª quer deletar?' } %></td></div>
            
              </tr>
            </div>

          <% end %>
        </tbody>
       </table>
       </div>
      </div>
    </div>

      <br>
    <div class="text-center">
      <%= link_to 'Adicionar Contato', new_contato_path, class: 'btn btn-success center-block' %>
    </div>
  </body>
</html>